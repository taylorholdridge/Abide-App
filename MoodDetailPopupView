import SwiftUI

struct MoodDetailPopupView: View {
    let entry: MoodEntry
    let onClose: () -> Void
    
    var body: some View {
        VStack(spacing: 12) {
            HStack {
                Spacer()
                Button(action: onClose) {
                    Image(systemName: "xmark.circle.fill")
                        .font(.title2)
                        .foregroundColor(.gray)
                }
            }
            
            Text(entry.mood)
                .font(.largeTitle)
            
            Text(entry.date, style: .date)
                .font(.subheadline)
                .foregroundColor(.gray)
            
            if !entry.journal.isEmpty {
                Text(entry.journal)
                    .font(.body)
                    .foregroundColor(.black.opacity(0.8))
                    .multilineTextAlignment(.center)
            }
        }
        .padding()
        .background(.ultraThinMaterial) // glassy background
        .cornerRadius(16)
        .shadow(radius: 5)
        .frame(maxWidth: 300)
        .padding()
    }
}
